{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "config": {
      "$ref": "#/$defs/__schema0"
    }
  },
  "required": [
    "config"
  ],
  "id": "https://raw.githubusercontent.com/radiosilence/jaritanet/main/schemas/routes.json",
  "title": "Routes Configuration Schema",
  "description": "Schema for routes configuration",
  "$defs": {
    "__schema0": {
      "type": "object",
      "properties": {
        "jaritanet-routes:cloudflare": {
          "type": "object",
          "properties": {
            "accountId": {
              "type": "string",
              "description": "Cloudflare account ID."
            }
          },
          "required": [
            "accountId"
          ]
        },
        "jaritanet-routes:zones": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "zoneId": {
                "type": "string",
                "description": "The Cloudflare ID of the zone."
              },
              "name": {
                "type": "string",
                "description": "The name of the zone."
              },
              "modules": {
                "type": "array",
                "items": {
                  "$ref": "#/$defs/__schema1"
                },
                "description": "DNS modules to apply."
              }
            },
            "required": [
              "zoneId",
              "name",
              "modules"
            ]
          }
        },
        "jaritanet-routes:serviceStacks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "stack": {
                "type": "string"
              }
            },
            "required": [
              "path"
            ]
          }
        },
        "jaritanet-routes:bluesky": {
          "type": "object",
          "properties": {
            "did": {
              "type": "string",
              "description": "Bluesky requires a DID to be set in the DNS records for authentication."
            }
          },
          "required": [
            "did"
          ]
        },
        "jaritanet-routes:fastmail": {
          "type": "object",
          "properties": {
            "mxDomain": {
              "type": "string"
            },
            "dkimDomain": {
              "type": "string"
            },
            "dkimSubdomain": {
              "type": "string"
            },
            "dmarcSubdomain": {
              "type": "string"
            },
            "dmarcAggEmail": {
              "type": "string"
            },
            "dmarcPolicy": {
              "type": "string"
            },
            "spfDomain": {
              "type": "string"
            }
          },
          "required": [
            "mxDomain",
            "dkimDomain",
            "dkimSubdomain",
            "dmarcSubdomain",
            "dmarcAggEmail",
            "dmarcPolicy",
            "spfDomain"
          ]
        },
        "cloudflare:apiToken": {
          "type": "object",
          "properties": {
            "secure": {
              "type": "string"
            }
          },
          "required": [
            "secure"
          ]
        }
      },
      "required": [
        "jaritanet-routes:cloudflare",
        "jaritanet-routes:zones",
        "jaritanet-routes:serviceStacks",
        "jaritanet-routes:bluesky",
        "jaritanet-routes:fastmail",
        "cloudflare:apiToken"
      ]
    },
    "__schema1": {
      "type": "string",
      "enum": [
        "bluesky",
        "fastmail"
      ]
    }
  }
}